<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="initial-scale=1">


    <title>Traject<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag "normalize", "all", "blog", "github" %>
    <%= javascript_include_tag  "all" %>

  </head>
  <body id="articles">
    <nav class="navbar navbar-inverse navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <img src="/images/Traject-logos/traject-icon-square-black-fill.svg" alt="Traject">
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-inverse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
              <li><a href="#story">Big Picture</a></li>
              <li><a href="#action">Details</a></li>
              <li><a href="#blog">Articles</a></li>
              <li><a href="#contact">Contact</a></liL>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <!-- <li><a href="https://github.com/ashlynbaum"><i class="fa fa-github-square fa-2x"></i></a></li> -->
                <li><a href="https://twitter.com/Traject_NZ"><i class="fa fa-twitter-square fa-2x"></i></a></li>
                <li><a href="https://www.linkedin.com/company/traject-new-zealand"><i class="fa fa-linkedin-square fa-2x"></i></a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <!-- Jubotron -->
    <div id="header">
      <div class="jumbotron">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <object data="/images/Traject-logos/traject-logo-wtag-white-02.svg" type="image/svg+xml"></object>
            <h1>Traject</h1>
            <h2>growing the knowledge economy</h2>
          </div>
        </div>
      </div>
    </div>

    <div id="main" role="main">
      <div class="row">
        <div class="col-md-9">
          <div class="title">
            <h2><%= current_article.title unless current_article.nil? %></h2>
            <p class="blog-date"><%= current_article.date.strftime('%B %d, %Y') unless current_article.nil? %></p>
          </div>
          <!-- Yield in blog articles -->
            <%= yield %>
        </div>
        <div class="col-md-3 sidebar">
          <aside>
            <h4>Recent Articles</h4>
            <ul class="list-unstyled">
              <% blog.articles[0...10].each do |article| %>
                <li><%= link_to article.title, article %></li>
              <% end %>
            </ul>

            <h4>Categories</h4>
            <ul class="list-unstyled">
              <% blog.tags.each do |tag, articles| %>
                <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag)%></li>
              <% end %>
            </ul>

            <h4>By Year</h4>
            <ul class="list-unstyled">
              <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
                <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
              <% end %>
            </ul>
          </aside>
        </div>
      </div>
    </div>
    <section id="footer">
      <div class="container-fluid">
        <div class="row">
          <p>
            <a href="https://twitter.com/Traject_NZ"><i class="fa fa-twitter-square fa-2x"></i></a>
            <a href="https://www.linkedin.com/company/traject-new-zealand"><i class="fa fa-linkedin-square fa-2x"></i></a>
          </p>
        </div>
      </div>
    </section>
    <%= google_analytics_universal_tag %>
  </body>
</html>
